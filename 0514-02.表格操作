<!-- 	border  		边框 通常1px
	cellspacing		单元格之间距离
	cellpadding     文字与单元格之间距离
	align  			对齐方式
		left        左
		right		右
		center 		居中
	table使用align="center"让整个表格居中对齐
	tr使用align="center"让表格中内容居中对齐
	width			宽度
	height			高度
	bgcolor         背景颜色
 -->
 	<table border="2px" bgcolor="skyblue" width="600px" height="800px" bordercolor="red" align="center">
